        <% if user_signed_in? %>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://images.ctfassets.net/b76knntgaaiu/5naNyc3nMHqLdlgNIsNiq6/26b94783fe37a2cfa95b086f85c6dfe4/pennylane.png?w=1536&fm=png", class: "avatar", alt: "dropdown menu" %>
